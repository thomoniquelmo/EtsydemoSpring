<h1>Listing listings</h1>


    <div class="row">
    <% @listings.each do |listing| %>
    
      <div class="col-md-3">
        <%= image_tag listing.image_url (:thumb) %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p> <%= number_to_currency(listing.price) %> </p>
          <p><%=listing.user.name %></p>
        <%= link_to 'Show', listing, class: 'btn btn-link' %>
        <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %>
        <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>    
        </div>
    <% end %>
    </div>
 

<br>

<%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
